@model MovieViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @foreach (var item in Model.Genres)
            {
                <span>@item.Name <span>&nbsp;</span></span>
            }
        </span>
        <p class="text-justify mt-3">@Model.Storyline</p>
        <div class="mt-5">
            @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Manager) || User.IsInRole(Roles.DataEntry))
            {
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">Edit</a>
            }
            <a asp-action="Index" class="btn btn-outline-info">Cancel</a>
        </div>
    </div>
</div>